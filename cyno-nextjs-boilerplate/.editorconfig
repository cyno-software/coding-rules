# top-most EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript and JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = double
max_line_length = off
curly_bracket_next_line = true
spaces_around_operators = true
spaces_around_brackets = false
indent_brace_style = 1tbs

# JSON files
[*.json]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Configuration files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
